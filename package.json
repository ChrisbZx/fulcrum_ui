{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "cross-env": "^5.2.0",
    "lerna": "^3.14.1"
  },
  "scripts": {
    "clean-all": "rm -rf ./packages/**/node_modules ./node_modules",
    "build-all": "yarn run build-fulcrum && yarn run build-torque",
    "build-alchemy-web3": "cross-env-shell REACT_APP_ETH_NETWORK=ropsten \"./scripts/alchemy-web3.sh\"",
    "build-fulcrum-ropsten": "cross-env-shell REACT_APP_ETH_NETWORK=ropsten \"./scripts/build-fulcrum.sh\"",
    "build-fulcrum-mainnet": "cross-env-shell REACT_APP_ETH_NETWORK=mainnet \"./scripts/build-fulcrum.sh\"",
    "build-torque": "cross-env-shell REACT_APP_ETH_NETWORK=ropsten \"./scripts/build-torque.sh\""
  }
}
