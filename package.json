{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "packages/web3-react-6/",
    "packages/web3-react-6/packages/*"
  ],
  "devDependencies": {
    "cross-env": "^5.2.0",
    "lerna": "^3.14.1"
  },
  "scripts": {
    "clean-all": "rm -rf ./packages/**/node_modules ./node_modules ./packages/web3-react-6/node_modules ./packages/web3-react-6/packages/**/node_modules",
    "build-all": "yarn run build-alchemy-web3 && yarn run build-fulcrum-ropsten",
    "build-alchemy-web3": "./scripts/build-alchemy-web3.sh",
    "build-web3-react": "./scripts/build-web3-react.sh",
    "bootstrap": "lerna bootstrap",
    "build-fulcrum-rinkeby": "cross-env-shell REACT_APP_ETH_NETWORK=rinkeby GENERATE_SOURCEMAP=false \"./scripts/build-fulcrum.sh\"",
    "build-fulcrum-kovan": "cross-env-shell REACT_APP_ETH_NETWORK=kovan GENERATE_SOURCEMAP=false \"./scripts/build-fulcrum.sh\"",
    "build-fulcrum-ropsten": "cross-env-shell REACT_APP_ETH_NETWORK=ropsten GENERATE_SOURCEMAP=false \"./scripts/build-fulcrum.sh\"",
    "build-fulcrum-mainnet": "cross-env-shell REACT_APP_ETH_NETWORK=mainnet GENERATE_SOURCEMAP=false \"./scripts/build-fulcrum.sh\"",
    "build-torque-rinkeby": "cross-env-shell REACT_APP_ETH_NETWORK=rinkeby GENERATE_SOURCEMAP=false \"./scripts/build-torque.sh\"",
    "build-torque-kovan": "cross-env-shell REACT_APP_ETH_NETWORK=kovan GENERATE_SOURCEMAP=false \"./scripts/build-torque.sh\"",
    "build-torque-ropsten": "cross-env-shell REACT_APP_ETH_NETWORK=ropsten GENERATE_SOURCEMAP=false \"./scripts/build-torque.sh\"",
    "build-torque-mainnet": "cross-env-shell REACT_APP_ETH_NETWORK=mainnet GENERATE_SOURCEMAP=false \"./scripts/build-torque.sh\""
  }
}
